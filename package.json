{
  "name": "next-runtime-dotenv",
  "version": "1.4.0",
  "description": "Expose environment variables to the runtime config of Next.js",
  "main": "index.js",
  "license": "MIT",
  "repository": "https://github.com/tusbar/next-runtime-dotenv",
  "author": "Bertrand Marron <bertrand.marron@gmail.com>",
  "scripts": {
    "test": "jest"
  },
  "keywords": [
    "next.js",
    "next",
    "plugins",
    "environment",
    "dotenv",
    "runtime",
    "configuration"
  ],
  "dependencies": {
    "dotenv": "^16.0.0"
  },
  "peerDependencies": {
    "next": ">= 5.1.0"
  },
  "devDependencies": {
    "@bizon/semantic-release-config": "^1.0.1",
    "jest": "^27.1.0",
    "jest-junit": "^13.0.0",
    "next": "^12.0.4",
    "semantic-release": "^19.0.2",
    "xo": "^0.51.0"
  },
  "jest": {
    "reporters": [
      "default"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "ignores": [
      "example/**"
    ],
    "rules": {
      "unicorn/prefer-module": "off"
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  },
  "release": {
    "extends": "@bizon/semantic-release-config"
  }
}
