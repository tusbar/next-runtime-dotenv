{
  "name": "next-runtime-dotenv",
  "version": "1.4.0",
  "description": "Expose environment variables to the runtime config of Next.js",
  "main": "index.js",
  "license": "MIT",
  "repository": "https://github.com/tusbar/next-runtime-dotenv",
  "author": "Bertrand Marron <bertrand.marron@gmail.com>",
  "scripts": {
    "test": "jest"
  },
  "keywords": [
    "next.js",
    "next",
    "plugins",
    "environment",
    "dotenv",
    "runtime",
    "configuration"
  ],
  "dependencies": {
    "dotenv": "^8.0.0"
  },
  "peerDependencies": {
    "next": ">= 5.1.0"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "jest": "^26.0.1",
    "jest-junit": "^12.0.0",
    "next": "^10.0.1",
    "xo": "^0.38.1"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "reports/tests"
        }
      ]
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "ignores": [
      "example/**"
    ],
    "rules": {
      "unicorn/no-array-reduce": "off"
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "jest"
        ]
      }
    ]
  }
}
